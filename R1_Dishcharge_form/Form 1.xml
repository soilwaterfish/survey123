<?xml version="1.0"?>
<h:html xmlns:esri="http://esri.com/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms">
  <h:head>
    <h:title>R1 Discharge Form</h:title>
    <model>
      <instance>
        <Form_1 id="R1__DISCHARGE_FORM">
          <USER_NAME/>
          <EMAIL/>
          <SRV_TYPE>Discharge</SRV_TYPE>
          <METADATA>
            <SURVEY_DATETIME/>
            <PROJ_TYPE/>
            <PROJ_TYPE_other/>
            <WETP_VISIT/>
            <SITE_NAME/>
            <FOREST/>
            <OBSERVERS/>
            <FLOW_METER_TYPE/>
            <SRV_GPS_LOCAT/>
            <GPS_ACCURACY/>
            <GPS_LATDD/>
            <GPS_LONGDD/>
            <DATUM>WGS84</DATUM>
            <LEW/>
            <REW/>
            <WDTH_STEP1/>
            <WDTH_STEP2/>
            <MEAS_INTERVAL/>
            <COMMENTS/>
          </METADATA>
          <MEASUREMENTS jr:template="">
            <STATION/>
            <CELL_WIDTH/>
            <WATER_DEPTH/>
            <POINT_VELOCITY_TYPE>point_six</POINT_VELOCITY_TYPE>
            <POINT_VELOCITY_TYPE_other/>
            <POINT_VELOCITY/>
            <POINT_DISCHARGE/>
            <PER_TOTAL_DISCHARGE_CALC/>
            <PER_TOTAL_DISCHARGE/>
            <NOTE/>
          </MEASUREMENTS>
          <SUMMARY>
            <STREAM_WIDTH/>
            <MAX_DEPTH/>
            <TOTAL_AREA/>
            <COUNT_MEASUREMENTS/>
            <AVERAGE_VELOCITY/>
            <TOTAL_DISCHARGE/>
          </SUMMARY>
          <PHOTOS>
            <PHOTO_PROTOCOL/>
            <US_PHOTO/>
            <DS_PHOTO/>
            <PHOTO_NOTES/>
          </PHOTOS>
          <meta>
            <instanceID/>
            <instanceName/>
          </meta>
        </Form_1>
      </instance>
      <instance id="@geopoint" src="jr://file-csv/@geopoint.csv">
        <root>
          <item>
            <name>_</name>
            <label>_</label>
          </item>
        </root>
      </instance>
      <instance id="@javascript" src="jr://file-csv/@javascript.csv">
        <root>
          <item>
            <name>_</name>
            <label>_</label>
          </item>
        </root>
      </instance>
      <bind nodeset="/Form_1/USER_NAME" jr:preload="property" type="string" jr:preloadParams="username"/>
      <bind nodeset="/Form_1/EMAIL" jr:preload="property" type="string" jr:preloadParams="email"/>
      <bind nodeset="/Form_1/SRV_TYPE" type="string"/>
      <bind nodeset="/Form_1/METADATA/SURVEY_DATETIME" type="dateTime" calculate="now()" required="true()"/>
      <bind nodeset="/Form_1/METADATA/PROJ_TYPE" type="select1" required="true()"/>
      <bind nodeset="/Form_1/METADATA/PROJ_TYPE_other" type="string" relevant="selected(../PROJ_TYPE, 'other')"/>
      <bind nodeset="/Form_1/METADATA/WETP_VISIT" type="select1" required="true()" relevant=" /Form_1/METADATA/PROJ_TYPE ='Wetted_Perimeter'"/>
      <bind nodeset="/Form_1/METADATA/SITE_NAME" type="string" required="true()"/>
      <bind nodeset="/Form_1/METADATA/FOREST" type="select1" required="true()"/>
      <bind nodeset="/Form_1/METADATA/OBSERVERS" type="string" required="true()"/>
      <bind nodeset="/Form_1/METADATA/FLOW_METER_TYPE" type="select1" required="true()"/>
      <bind nodeset="/Form_1/METADATA/SRV_GPS_LOCAT" type="geopoint"/>
      <bind nodeset="/Form_1/METADATA/GPS_ACCURACY" type="string" calculate="pulldata(&quot;@geopoint&quot;,  /Form_1/METADATA/SRV_GPS_LOCAT , &quot;horizontalAccuracy&quot;)" required="true()" readonly="true()"/>
      <bind nodeset="/Form_1/METADATA/GPS_LATDD" type="string" calculate="pulldata(&quot;@geopoint&quot;,  /Form_1/METADATA/SRV_GPS_LOCAT , &quot;y&quot;)" required="true()" readonly="true()"/>
      <bind nodeset="/Form_1/METADATA/GPS_LONGDD" type="string" calculate="pulldata(&quot;@geopoint&quot;,  /Form_1/METADATA/SRV_GPS_LOCAT , &quot;x&quot;)" required="true()" readonly="true()"/>
      <bind nodeset="/Form_1/METADATA/DATUM" type="string"/>
      <bind nodeset="/Form_1/METADATA/LEW" type="decimal" required="true()"/>
      <bind nodeset="/Form_1/METADATA/REW" type="decimal" required="true()"/>
      <bind nodeset="/Form_1/METADATA/WDTH_STEP1" type="string" calculate=" /Form_1/METADATA/LEW - /Form_1/METADATA/REW "/>
      <bind nodeset="/Form_1/METADATA/WDTH_STEP2" type="string" calculate="if( /Form_1/METADATA/WDTH_STEP1 &lt;0,-1* /Form_1/METADATA/WDTH_STEP1 ,  /Form_1/METADATA/WDTH_STEP1 )" readonly="true()"/>
      <bind nodeset="/Form_1/METADATA/MEAS_INTERVAL" type="decimal" calculate="round( /Form_1/SUMMARY/STREAM_WIDTH  div 20, 2)"/>
      <bind nodeset="/Form_1/METADATA/COMMENTS" type="string" esri:fieldLength="1000"/>
      <bind nodeset="/Form_1/MEASUREMENTS" esri:parameters="allowUpdates=true"/>
      <bind nodeset="/Form_1/MEASUREMENTS/STATION" type="decimal"/>
      <bind nodeset="/Form_1/MEASUREMENTS/CELL_WIDTH" type="decimal" calculate="pulldata('@javascript', 'discharge.js', 'lastValue',  /Form_1/MEASUREMENTS , 'STATION')"/>
      <bind nodeset="/Form_1/MEASUREMENTS/WATER_DEPTH" type="decimal"/>
      <bind nodeset="/Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE" type="select1"/>
      <bind nodeset="/Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE_other" type="string" relevant="selected(../POINT_VELOCITY_TYPE, 'other')"/>
      <bind nodeset="/Form_1/MEASUREMENTS/POINT_VELOCITY" type="string" calculate="pulldata(&quot;@javascript&quot;, &quot;discharge.js&quot;, &quot;typeMessage&quot;,  /Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE )"/>
      <bind nodeset="/Form_1/MEASUREMENTS/POINT_DISCHARGE" type="decimal" calculate="pulldata(&quot;@javascript&quot;, &quot;discharge.js&quot;, &quot;dischargeCalc&quot;,  /Form_1/MEASUREMENTS/CELL_WIDTH ,  /Form_1/MEASUREMENTS/WATER_DEPTH ,  /Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE ,  /Form_1/MEASUREMENTS/POINT_VELOCITY )" readonly="true()" esri:parameters="calculationMode=always"/>
      <bind nodeset="/Form_1/MEASUREMENTS/PER_TOTAL_DISCHARGE_CALC" type="string" calculate="round( /Form_1/MEASUREMENTS/POINT_DISCHARGE div /Form_1/SUMMARY/TOTAL_DISCHARGE ,2)*100" readonly="true()" esri:parameters="calculationMode=always"/>
      <bind nodeset="/Form_1/MEASUREMENTS/PER_TOTAL_DISCHARGE" type="int" calculate=" /Form_1/MEASUREMENTS/PER_TOTAL_DISCHARGE_CALC " esri:parameters="calculationMode=always"/>
      <bind nodeset="/Form_1/MEASUREMENTS/NOTE" type="string" esri:fieldLength="500"/>
      <bind nodeset="/Form_1/SUMMARY/STREAM_WIDTH" type="decimal" calculate="round( /Form_1/METADATA/WDTH_STEP2 ,2)" readonly="true()"/>
      <bind nodeset="/Form_1/SUMMARY/MAX_DEPTH" type="decimal" calculate="max( /Form_1/MEASUREMENTS/WATER_DEPTH )" required="true()"/>
      <bind nodeset="/Form_1/SUMMARY/TOTAL_AREA" type="string" calculate="sum( /Form_1/MEASUREMENTS/WATER_DEPTH )*sum( /Form_1/MEASUREMENTS/CELL_WIDTH )" readonly="true()"/>
      <bind nodeset="/Form_1/SUMMARY/COUNT_MEASUREMENTS" type="string" calculate="count( /Form_1/MEASUREMENTS/POINT_VELOCITY )" readonly="true()"/>
      <bind nodeset="/Form_1/SUMMARY/AVERAGE_VELOCITY" type="decimal" calculate="round( /Form_1/SUMMARY/TOTAL_DISCHARGE div /Form_1/SUMMARY/TOTAL_AREA , 4)" readonly="true()"/>
      <bind nodeset="/Form_1/SUMMARY/TOTAL_DISCHARGE" type="decimal" calculate="sum( /Form_1/MEASUREMENTS/POINT_DISCHARGE )" required="true()"/>
      <bind nodeset="/Form_1/PHOTOS/PHOTO_PROTOCOL" readonly="true()" type="string"/>
      <bind nodeset="/Form_1/PHOTOS/US_PHOTO" type="binary"/>
      <bind nodeset="/Form_1/PHOTOS/DS_PHOTO" type="binary"/>
      <bind nodeset="/Form_1/PHOTOS/PHOTO_NOTES" type="string" esri:fieldLength="500"/>
      <bind nodeset="/Form_1/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
      <bind nodeset="/Form_1/meta/instanceName" type="string" calculate="concat ( /Form_1/METADATA/SITE_NAME , &quot; &quot;,  /Form_1/METADATA/SURVEY_DATETIME )"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="compact" ref="/Form_1/METADATA">
      <label>Metadata</label>
      <input appearance="autocomplete" ref="/Form_1/METADATA/SURVEY_DATETIME">
        <label>Date/time:</label>
      </input>
      <select1 appearance="autocomplete" ref="/Form_1/METADATA/PROJ_TYPE">
        <label>Project Type:</label>
        <hint>Select the appropriate project type.</hint>
        <item>
          <label>Wetted Perimeter</label>
          <value>Wetted_Perimeter</value>
        </item>
        <item>
          <label>Monitoring</label>
          <value>Monitoring</value>
        </item>
        <item>
          <label>Fish Restoration</label>
          <value>Fish_Restoration</value>
        </item>
        <item>
          <label>Structure Design</label>
          <value>Structure_Design</value>
        </item>
        <item>
          <label>Stream Restoration</label>
          <value>Stream_Restoration</value>
        </item>
        <item>
          <label>Water Quality</label>
          <value>Water_Quality</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/Form_1/METADATA/PROJ_TYPE_other">
        <label>Specify other.</label>
      </input>
      <select1 ref="/Form_1/METADATA/WETP_VISIT">
        <label>Wetted P Visit:</label>
        <item>
          <label>High</label>
          <value>High</value>
        </item>
        <item>
          <label>Flow</label>
          <value>Flow</value>
        </item>
        <item>
          <label>Mid</label>
          <value>Mid</value>
        </item>
      </select1>
      <input appearance="predictivetext" ref="/Form_1/METADATA/SITE_NAME">
        <label>Water Name:</label>
      </input>
      <select1 appearance="autocomplete" ref="/Form_1/METADATA/FOREST">
        <label>Forest:</label>
        <hint>Select the appropriate Forest.</hint>
        <item>
          <label>Beaverhead-Deerlodge</label>
          <value>bd</value>
        </item>
        <item>
          <label>Bitterroot</label>
          <value>broot</value>
        </item>
        <item>
          <label>Custer Gallatin</label>
          <value>cg</value>
        </item>
        <item>
          <label>Dakota Prairie Grasslands</label>
          <value>dpg</value>
        </item>
        <item>
          <label>Flathead</label>
          <value>flathead</value>
        </item>
        <item>
          <label>Helena-Lewis and Clark</label>
          <value>hlc</value>
        </item>
        <item>
          <label>Idaho Panhandle</label>
          <value>idph</value>
        </item>
        <item>
          <label>Kootenai</label>
          <value>kootenai</value>
        </item>
        <item>
          <label>Lolo</label>
          <value>lolo</value>
        </item>
        <item>
          <label>Nez Perce-Clearwater</label>
          <value>npcw</value>
        </item>
        <item>
          <label>NA - Off Forest</label>
          <value>NA</value>
        </item>
      </select1>
      <input appearance="predictivetext" ref="/Form_1/METADATA/OBSERVERS">
        <label>Observers:</label>
        <hint>Enter the first initial of the first name and the full last name, followed by a comma for multiple observers ; e.g, sbear, wowl, etc.</hint>
      </input>
      <select1 appearance="autocomplete" ref="/Form_1/METADATA/FLOW_METER_TYPE">
        <label>Flow Meter Type:</label>
        <hint>Select the appropropriate flow meter type.</hint>
        <item>
          <label>Electromagnetic (Marsh, HACH, etc)</label>
          <value>electro_magnetic</value>
        </item>
        <item>
          <label>Price AA</label>
          <value>Price_AA</value>
        </item>
        <item>
          <label>Pygmy</label>
          <value>Pygmy</value>
        </item>
        <item>
          <label>Swoffer</label>
          <value>Swoffer</value>
        </item>
        <item>
          <label>Acoustic Doppler Radar</label>
          <value>adr</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
        <item>
          <label>Orange Peel</label>
          <value>orange_peel</value>
        </item>
      </select1>
      <input ref="/Form_1/METADATA/SRV_GPS_LOCAT">
        <label>GPS location:</label>
      </input>
      <input accuracyThreshold="20" ref="/Form_1/METADATA/GPS_ACCURACY">
        <label>GPS accuracy (m):</label>
      </input>
      <input ref="/Form_1/METADATA/GPS_LATDD">
        <label>Latitude (decimal degrees):</label>
      </input>
      <input ref="/Form_1/METADATA/GPS_LONGDD">
        <label>Longitude (decimal degrees):</label>
      </input>
      <input ref="/Form_1/METADATA/LEW">
        <label>Left Edge of Water:</label>
        <hint>determined by looking downstream, measured to nearest tenth of a foot; e.g. 2.1</hint>
      </input>
      <input ref="/Form_1/METADATA/REW">
        <label>Right Edge of Water:</label>
        <hint>determined by looking downstream, measured to nearest tenth of a foot; e.g. 10.2</hint>
      </input>
      <input appearance="minimal" ref="/Form_1/METADATA/MEAS_INTERVAL">
        <label>Measurement Interval:</label>
        <hint>Use as a guide to determine an appropriate measurement interval (channel width/20). As a general rule, the measurement interval width should decrease with increased depth or velocity, and increase with decreased depth or velocity. An increase of 25% in depth or velocity would cause a 50% decrease in the measurement interval. A minimum of 20 measurements (maximum of 35) should be collected for channels with a width of 5 feet or greater.</hint>
      </input>
      <input appearance="multiline predictivetext" ref="/Form_1/METADATA/COMMENTS">
        <label>Comments:</label>
      </input>
    </group>
    <group ref="/Form_1/MEASUREMENTS">
      <label>Discharge Measurements</label>
      <repeat nodeset="/Form_1/MEASUREMENTS" appearance="compact">
        <input ref="/Form_1/MEASUREMENTS/STATION">
          <label>Station:</label>
          <hint>distance along tape in decimal feet, not inches; e.g., 2.15</hint>
        </input>
        <input ref="/Form_1/MEASUREMENTS/CELL_WIDTH">
          <label>Cell Width:</label>
          <hint>Distance on tape from last vertical point measurement (station) in tenths of feet; e.g., .25</hint>
        </input>
        <input ref="/Form_1/MEASUREMENTS/WATER_DEPTH">
          <label>Depth:</label>
          <hint>depth of water from rod in tenths of feet</hint>
        </input>
        <select1 ref="/Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE">
          <label>Point Velocity Type:</label>
          <hint>ft/sec.</hint>
          <item>
            <label>0.6 Method</label>
            <value>point_six</value>
          </item>
          <item>
            <label>0.2/0.8 Method</label>
            <value>both</value>
          </item>
          <item>
            <label>Other</label>
            <value>other</value>
          </item>
        </select1>
        <input ref="/Form_1/MEASUREMENTS/POINT_VELOCITY_TYPE_other">
          <label>Specify other.</label>
        </input>
        <input ref="/Form_1/MEASUREMENTS/POINT_VELOCITY">
          <label>Point Velocity:</label>
          <hint>ft/sec.</hint>
        </input>
        <input ref="/Form_1/MEASUREMENTS/POINT_DISCHARGE">
          <label>Point Discharge: (read only)</label>
        </input>
        <input ref="/Form_1/MEASUREMENTS/PER_TOTAL_DISCHARGE">
          <label>Percent of Total Discharge: (read only)</label>
          <hint>No single discharge measurement should exceed 5% of the total discharge. Review individual discharge records when survey is complete and tap the refresh button in this field to recalculate the percent of total discharge for each record. If the percent total discharge exceeds 5%, collect an additional measurment and adjust the cell widths accordingly.</hint>
        </input>
        <input appearance="multiline predictivetext" ref="/Form_1/MEASUREMENTS/NOTE">
          <label>Note:</label>
        </input>
      </repeat>
    </group>
    <group appearance="compact" ref="/Form_1/SUMMARY">
      <label>Summary</label>
      <input ref="/Form_1/SUMMARY/STREAM_WIDTH">
        <label>Stream Width:</label>
      </input>
      <input ref="/Form_1/SUMMARY/MAX_DEPTH">
        <label>Max Depth:</label>
        <hint>Enter the max depth in tenths of feet from rod.</hint>
      </input>
      <input ref="/Form_1/SUMMARY/AVERAGE_VELOCITY">
        <label>Average Velocity:</label>
      </input>
      <input ref="/Form_1/SUMMARY/TOTAL_DISCHARGE">
        <label>Total Discharge:</label>
        <hint>Enter discharge value from flow meter if not calculated from above.</hint>
      </input>
    </group>
    <group appearance="compact" ref="/Form_1/PHOTOS">
      <label>Photos</label>
      <input ref="/Form_1/PHOTOS/PHOTO_PROTOCOL">
        <label>Take photos upstream and downstream of the stretched tape at the discharge measurement location.</label>
      </input>
      <upload mediatype="image/*" ref="/Form_1/PHOTOS/US_PHOTO">
        <label>Upstream</label>
      </upload>
      <upload mediatype="image/*" ref="/Form_1/PHOTOS/DS_PHOTO">
        <label>Downstream</label>
      </upload>
      <input appearance="multiline" ref="/Form_1/PHOTOS/PHOTO_NOTES">
        <label>Comments (optional):</label>
      </input>
    </group>
  </h:body>
</h:html>
